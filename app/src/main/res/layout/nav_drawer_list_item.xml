<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_drawer_item_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/feed_icon" />

    <com.app.shixelsdating.ui.widgets.WeMeetTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/nav_item_title"
        android:layout_toEndOf="@id/nav_drawer_item_icon"
        android:layout_toRightOf="@id/nav_drawer_item_icon"
        android:text="Feed"
        android:textColor="@color/icons_color"
        android:textSize="17sp"
        app:fontName="Roboto-Bold.ttf" />

    <com.app.shixelsdating.ui.widgets.WeMeetTextView
        android:id="@+id/nav_bagde_indicator"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:background="@drawable/red_round_rect"
        android:gravity="center"
        android:text="10"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:fontName="Roboto-Bold.ttf" />

</RelativeLayout>